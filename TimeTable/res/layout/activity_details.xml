<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout android:layout_width="match_parent"
		android:id="@+id/linearLayout1" android:layout_height="wrap_content">
		<TextView android:text="课程名：     " android:id="@+id/textView1"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		<EditText android:layout_height="wrap_content"
			android:layout_width="match_parent" android:id="@+id/editText1" android:hint="请输入课程名">
		</EditText>
	</LinearLayout>

	<LinearLayout android:layout_width="match_parent"
		android:id="@+id/linearLayout2" android:layout_height="wrap_content">
		<TextView android:text="课程教师：" android:id="@+id/textView2"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		<EditText android:layout_height="wrap_content"
			android:layout_width="match_parent" android:id="@+id/editText2" android:hint="请输入课程教师">
		</EditText>
	</LinearLayout>

	<LinearLayout android:layout_width="match_parent"
		android:id="@+id/linearLayout3" android:layout_height="wrap_content">
		<TextView android:text="上课地点：" android:id="@+id/textView3"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		<EditText android:layout_height="wrap_content"
			android:layout_width="match_parent" android:id="@+id/editText3" android:hint="请输入上课地点">
		</EditText>
	</LinearLayout>
	<LinearLayout android:layout_width="match_parent"
		android:id="@+id/linearLayout4" android:layout_height="wrap_content">
		<TextView android:text="上课时间：" android:id="@+id/textView4"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		<EditText android:layout_height="wrap_content"
			android:layout_width="match_parent" android:id="@+id/editText4" android:hint="请输入节数"  android:editable="false">
		</EditText>
	</LinearLayout>

	<LinearLayout android:layout_width="match_parent"
		android:id="@+id/linearLayout5" android:layout_height="wrap_content">
		<TextView android:text="周数：         " android:id="@+id/textView5"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		<EditText android:layout_height="wrap_content"
			android:layout_width="match_parent" android:id="@+id/editText5" android:hint="请输入周数"  android:editable="false">
		</EditText>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:id="@+id/linearLayout6" android:layout_height="fill_parent" android:gravity="bottom|center_horizontal">
		<Button android:text="保存" android:id="@+id/button1"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
		<Button android:text="取消" android:id="@+id/button2"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
		<Button android:text="删除" android:id="@+id/button3"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
	</LinearLayout>
</LinearLayout>
